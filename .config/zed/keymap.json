// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  // Default Workspace bindings
  {
    "context": "Workspace",
    "bindings": {
      // Toggle the File Finder (Shift-Shift)
      "shift shift": "file_finder::Toggle",
      // Toggle the Terminal Panel (Ctrl-`)
      "ctrl-`": "workspace::ToggleBottomDock"
    }
  },
  // Insert Mode bindings
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // Exit Insert mode (jj or JJ)
      "j j": "vim::NormalBefore",
      "shift-j shift-j": "vim::NormalBefore"
    }
  },
  // Normal mode setting
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      ";": "command_palette::Toggle",
      "ctrl-c": ["workspace::SendKeystrokes", ": % y enter"],
      "ctrl-b": "workspace::ToggleLeftDock",
      "ctrl-q": "pane::CloseActiveItem"
    }
  },
  {
    "context": "Editor && (vim_mode == visual || vim_mode == visual_line || vim_mode == visual_block)",
    "bindings": {
      "p": ["workspace::SendKeystrokes", "P"]
    }
  }
]
